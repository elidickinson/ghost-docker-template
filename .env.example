# Ghost development environment variables
# Copy this file to .env and fill in your values

# Node environment
# Set to production, development, or staging
NODE_ENV=development

# Mail configuration for SMTP
# Required for sending newsletters, password reset emails, etc.
MAIL_FROM=your-email@example.com
MAIL_HOST=smtp.mailgun.org
MAIL_PORT=587
MAIL_USER=postmaster@your-domain.mailgun.org
MAIL_PASSWORD=your-mailgun-smtp-password

# Port configuration for Ghost
# This is the external port that will be mapped to the container
# Ghost inside the container always runs on port 2368
# The site will be accessible at http://localhost:<PORT>
PORT=2368
